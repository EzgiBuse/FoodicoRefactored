<header class="header">
    <div class="header__top">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="header__top__inner">
                        <div class="header__top__left">
                           
                        </div>
                        <div class="header__logo">
                            <a class="nav-link" asp-controller="Home" asp-action="Index"><img src="/cake-main/img/logo.png"></a>
                        </div>
                        <div class="header__top__right">
                           
                            <div class="header__top__right__cart">
                                <a class="nav-link" asp-controller="ShoppingCart" asp-action="Index"><img src="/cake-main/img/icon/cart.png" > </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="canvas__open"><i class="fa fa-bars"></i></div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <nav class="header__menu mobile-menu">
                    <ul>
                        <li><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li><a class="nav-link" asp-controller="Shop" asp-action="Index">Shop</a></li>
                        
                        </li>
                        <li><a class="nav-link" asp-controller="Contact" asp-action="Index">Contact Us</a></li>
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <li><a class="nav-link" asp-controller="Login" asp-action="Login">Login</a></li>
                            <li><a class="nav-link" asp-controller="Register" asp-action="Register">Register</a></li>
                        }
                        else
                        {
                            <li><a class="nav-link" href="#">Hi @User.Identity.Name</a></li>
                            <li><a class="nav-link" asp-controller="Login" asp-action="Logout">Logout</a></li>
                        }

                    </ul>
                </nav>
            </div>
        </div>
    </div>
</header>